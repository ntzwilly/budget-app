<div class="add-transaction">
   <nav class="navbar d-flex align-items-center px-3 login-nav">
    <%= link_to 'arrow_back', root_url, class:"material-icons back-arrow"%>
    <p class="m-0">NEW TRANSACTION</p>
    <a></a>
  </nav>
  <%= form_with(model: action) do |form| %>
    <div class="form-group">
      <%= form.text_field :name, autofocus: true, placeholder: "Name", class:"form-control",  required: true %>
    </div>
    <div class="form-group">
      <%= form.number_field :amount, placeholder: "Amount", class:"form-control", required: true %>
    </div>
    <div class="form-group">
      <%= form.collection_select :category_ids, current_user.categories.order(:name), :id, :name, {}, { class: "form-control", multiple: true } %>
    </div>
    <div class="login-button">
     <%= form.submit "Save", class: "btn text-light" %>
    </div>
  <% end %>
</div>